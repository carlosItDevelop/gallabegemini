@using VelzonModerna.ViewModels
@using GeneralLabSolutions.Domain.Enums
@model VelzonModerna.ViewModels.ClienteViewModel

@{
    ViewBag.Title = "Adicionar Cliente";
    ViewBag.pTitle = "Adicionar Cliente";
    ViewBag.pageTitle = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb {
    <ol class="breadcrumb m-0">
        <li class="breadcrumb-item"><a asp-controller="GalLabs" asp-action="GlDashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Lista de Cliente</a></li>
        <li class="breadcrumb-item active">Detalhes</li>
    </ol>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Novo Cliente</h4>
                <div class="flex-shrink-0">
                    <div class="form-check form-switch form-switch-right form-switch-md">
                        @* Pode remover este div se não houver switch aqui *@
                    </div>
                </div>
            </div><!-- end card header -->
            <div class="card-body">
                <p class="text-muted">Para <code>Adicionar um Cliente</code>, observe os campos obrigatórios e atente-se para o Tipo de Pessoa/Documento.</p>

                <div class="live-preview">
                    <form asp-action="Create" asp-controller="Cliente">
                        @* Removido o <div class="row g-3"> daqui *@
                        <vc:summary></vc:summary>
                        <partial name="_edit_e_create" model="Model" />
                        <hr />
                        <div>
                            <input type="submit" value="Adicionar" class="btn btn-outline-info" />
                            <a asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!-- prismjs plugin -->
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <script src="~/assets/js/app.js"></script>
    <partial name="_ValidationScriptsPartial" />
}