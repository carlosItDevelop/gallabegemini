@using VelzonModerna.ViewModels
@using GeneralLabSolutions.Domain.Enums
@model ContaViewModel

@{
    ViewBag.Title = "Adicionar Conta";
    ViewBag.pTitle = "Adicionar Conta";
    ViewBag.pageTitle = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"> <strong>Nova Conta </strong></h4>
            </div>

            <div style="padding: 20px;">
                <form asp-action="Create">
                    <vc:summary></vc:summary>

                    <partial name="_edit_e_create" model="Model" />

                    <hr />

                    <div>
                        <input type="submit" value="Adicionar" class="btn btn-outline-info" />
                        <a asp-action="Index" class="btn btn-outline-warning">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/libs/prismjs/prism.js"></script>
    <script src="~/assets/js/app.js"></script>
    <partial name="_ValidationScriptsPartial" />
}