@{
    ViewBag.Title = "CRM de Leads";
    ViewBag.pTitle = "CRM";
    ViewBag.pageTitle = "General Lab Solutions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    @* <link href="/css/font-awesome-6.0.0/all.min.css" rel="stylesheet" /> *@

    <link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/crm-styles.css" />
}


@section Breadcrumb {
    <ol class="breadcrumb m-0">
        <li class="breadcrumb-item"><a asp-controller="GalLabs" asp-action="GlDashboard">Dashboard Geral</a></li>
        <li class="breadcrumb-item active">CRM</li>
    </ol>
}

