@*
    Aqui temos os contêineres principais para cada aba. 
    Note que eles estão vazios. Nos próximos passos, vamos preenchê-los com Partial Views.
*@
<main class="main-content">
    <div id="dashboard" class="tab-content active">
        <partial name="_Dashboard" />
    </div>

    <div id="leads-list" class="tab-content">
        <partial name="_LeadsList" />
    </div>

    <div id="kanban" class="tab-content">
        <partial name="_Kanban" />
    </div>

    <div id="tasks" class="tab-content">
        <partial name="_Tasks" />
    </div>

    <div id="calendar" class="tab-content">
        <partial name="_Calendar" />
    </div>

    <div id="reports" class="tab-content">
        <partial name="_Reports" />
    </div>

    <div id="files" class="tab-content">
        <partial name="_Files" />
    </div>

    <div id="logs" class="tab-content">
        <partial name="_Logs" />
    </div>
</main>


