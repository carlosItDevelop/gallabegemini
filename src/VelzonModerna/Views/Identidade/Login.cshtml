@model GeneralLabSolutions.CoreShared.ViewModelsIdentidade.UsuarioLogin

<!-- ToDo: Muda essa Model acima, pois esta é do login fake  -->

@{
    ViewBag.Title = "TOM System - Login";
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="sm-hover" data-sidebar-image="none" data-preloader="disable">
<head>
    @Html.Partial("~/Views/Shared/_title_meta.cshtml")
    @Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>
<body>

    <!-- auth-page wrapper -->
    <div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-overlay"></div>
        <!-- auth-page content -->
        <div class="auth-page-content overflow-hidden pt-lg-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card overflow-hidden">
                            <div class="row g-0">
                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4 auth-one-bg h-100">
                                        <div class="bg-overlay"></div>
                                        <div class="position-relative h-100 d-flex flex-column">
                                            <div class="mb-4">
                                                <a href="@Url.Action("Index", "Cliente")" class="d-block">
                                                    <img src="~/assets/images/logo-light.png" alt="" height="18">
                                                </a>
                                            </div>
                                            <div class="mt-auto">
                                                <div class="mb-3">
                                                    <i class="ri-double-quotes-l display-4 text-success"></i>
                                                </div>

                                                <div id="qoutescarouselIndicators" class="carousel slide" data-bs-ride="carousel">
                                                    <div class="carousel-indicators">
                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="0" class="active"
                                                                aria-current="true" aria-label="Slide 1"></button>
                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="1"
                                                                aria-label="Slide 2"></button>
                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="2"
                                                                aria-label="Slide 3"></button>

                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="3"
                                                                aria-label="Slide 4"></button>

                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="4"
                                                                aria-label="Slide 5"></button>

                                                        <button type="button" data-bs-target="#qoutescarouselIndicators" data-bs-slide-to="5"
                                                                aria-label="Slide 6"></button>


                                                    </div>
                                                    <div class="carousel-inner text-center text-white pb-5">
                                                        <div class="carousel-item active">
                                                            <p class="fs-15 fst-italic">" Dispomos de um extenso escopo de equipamentos para variados segmentos! "</p>
                                                        </div>
                                                        <div class="carousel-item">
                                                            <p class="fs-15 fst-italic">" Nossa equipe está pronta para te dar suporte durante todo o tempo."</p>
                                                        </div>
                                                        <div class="carousel-item">
                                                            <p class="fs-15 fst-italic">" Pensamos à frente do nosso tempo e buscamos melhorias contínuas para superar suas expectativas! "</p>
                                                        </div>

                                                        <div class="carousel-item">
                                                            <p class="fs-15 fst-italic">" Importação e distribuição de equipamentos, reagentes e insumos de alta qualidade para laboratórios de pesquisa e análise.! "</p>
                                                        </div>

                                                        <div class="carousel-item">
                                                            <p class="fs-15 fst-italic">" Atendemos laboratórios de todos os portes, com soluções personalizadas para suas necessidades. "</p>
                                                        </div>

                                                    </div>
                                                </div>
                                                <!-- end carousel -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end col -->

                                <div class="col-lg-6">
                                    <div class="p-lg-5 p-4">
                                        <div>
                                            <h5 class="text-primary">Que bom que você está aqui!</h5>
                                            <p class="text-muted">Faça login para acessar o TOM System.</p>
                                        </div>

                                        <div class="mt-4">
                                            <form asp-action="Login" asp-controller="Identidade" method="post">

                                                <div class="mb-3">

                                                    <label asp-for="Email" class="form-label">Usuário</label>
                                                    <input asp-for="Email" class="form-control pe-5 password-input" placeholder="Digite seu usuário..." />
                                                    <span asp-validation-for="Email" class="text-danger"></span>



                                                </div>

                                                <div class="mb-3">
                                                    <div class="float-end">
                                                        <a href="javascript:void();" class="text-muted">Esqueceu a senha?</a>
                                                    </div>
                                                    <label asp-for="Senha" class="form-label">Senha</label>
                                                    <div class="position-relative auth-pass-inputgroup mb-3">

                                                        <input asp-for="Senha" class="form-control pe-5 password-input" type="password" placeholder="Digite sua senha..." />
                                                        <span asp-validation-for="Senha" class="text-danger"></span>

                                                        <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                                    </div>
                                                </div>

                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                                    <label class="form-check-label" for="auth-remember-check">Lembrar Senha</label>
                                                </div>

                                                <div class="mt-4">
                                                    <button class="btn btn-success w-100" type="submit">Lagar</button>
                                                </div>

                                                <div class="mt-4 text-center">
                                                    <div class="signin-other-title">
                                                        <h5 class="fs-13 mb-4 title">Faça Login Social com:</h5>
                                                    </div>

                                                    <div>
                                                        <button type="button" class="btn btn-primary btn-icon waves-effect waves-light"><i class="ri-facebook-fill fs-16"></i></button>
                                                        <button type="button" class="btn btn-danger btn-icon waves-effect waves-light"><i class="ri-google-fill fs-16"></i></button>
                                                        <button type="button" class="btn btn-dark btn-icon waves-effect waves-light"><i class="ri-github-fill fs-16"></i></button>
                                                        <button type="button" class="btn btn-info btn-icon waves-effect waves-light"><i class="ri-twitter-fill fs-16"></i></button>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>

                                        <div class="mt-5 text-center">
                                            <p class="mb-0">Não tem uma conta, ainda? <a href="javascript: void();" class="fw-semibold text-primary text-decoration-underline"> Registrar</a> </p>
                                        </div>
                                    </div>
                                </div>
                                <!-- end col -->
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end card -->
                    </div>
                    <!-- end col -->

                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> TOM System. Criado com <i class="mdi mdi-heart text-danger"></i> por: Equipe Cooperchip
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    @Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")

    <!-- password-addon init -->
    <script src="~/assets/js/pages/password-addon.init.js"></script>

</body>
</html>
