<div class="modal fade" id="leadModal" tabindex="-1" aria-labelledby="leadModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="leadModalTitle">Novo Lead</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="leadForm">
                    <input type="hidden" id="leadId" name="id">

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="leadName" class="form-label">Nome Completo*</label>
                            <input type="text" id="leadName" name="name" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label for="leadCompany" class="form-label">Empresa</label>
                            <input type="text" id="leadCompany" name="company" class="form-control">
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="leadEmail" class="form-label">Email*</label>
                            <input type="email" id="leadEmail" name="email" class="form-control" required>
                        </div>
                        <div class="col-md-6">
                            <label for="leadPhone" class="form-label">Telefone</label>
                            <input type="tel" id="leadPhone" name="phone" class="form-control">
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="leadPosition" class="form-label">Cargo</label>
                            <input type="text" id="leadPosition" name="position" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label for="leadSource" class="form-label">Origem</label>
                            <select id="leadSource" name="source" class="form-select">
                                <option value="website">Website</option>
                                <option value="referral">Indicação</option>
                                <option value="social">Redes Sociais</option>
                                <option value="event">Evento</option>
                                <option value="cold_call">Cold Call</option>
                            </select>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label for="leadStatus" class="form-label">Status</label>
                            <select id="leadStatus" name="status" class="form-select">
                                <option value="novo">Novo</option>
                                <option value="contato">Contato</option>
                                <option value="qualificado">Qualificado</option>
                                <option value="proposta">Proposta</option>
                                <option value="negociacao">Negociação</option>
                                <option value="ganho">Ganho</option>
                                <option value="perdido">Perdido</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="leadValue" class="form-label">Valor Estimado (R$)</label>
                            <input type="number" id="leadValue" name="value" class="form-control" min="0" step="0.01">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="leadNotes" class="form-label">Observações</label>
                        <textarea id="leadNotes" name="notes" rows="3" class="form-control"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" onclick="submitLead()">
                    <i class="ri-save-line align-bottom me-1"></i> Salvar
                </button>
            </div>
        </div>
    </div>
</div>