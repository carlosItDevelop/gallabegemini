@using VelzonModerna.ViewModels
@model VendedorViewModel

@section Breadcrumb {
    <ol class="breadcrumb m-0">
        <li class="breadcrumb-item"><a asp-controller="GalLabs" asp-action="GlDashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Lista de Vendedor</a></li>
        <li class="breadcrumb-item active">Excluir</li>
    </ol>
}

@{
    ViewBag.Title = "Excluir Vendedor";
    ViewBag.pTitle = "Excluir Vendedor";
    ViewBag.pageTitle = "Vendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="partialcooperchip/_cssindex" />

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1"> <strong>Excluir Vendedor >> @Model.Nome.ToUpper() </strong></h4>
            </div><!-- end card header -->

            <div class="card-body">
                <div class="live-preview">
                    <h3 class="text-danger">Tem certeza que deseja excluir este registro?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nome)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Documento)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Documento)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.TipoDePessoa)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TipoDePessoa)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.StatusDoVendedor)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.StatusDoVendedor)
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-end">
                            <button type="submit" class="btn btn-danger">Excluir</button>
                            <a asp-action="Index" class="btn btn-light">Voltar Ã  lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="partialcooperchip/_scripts_datatables" />
    <script src="~/assets/js/app.js"></script>
}